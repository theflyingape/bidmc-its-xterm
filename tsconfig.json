{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": false,
    "outDir": "build",
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "sourceMap": false
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
